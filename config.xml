<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.app.adonif" version="1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Adonif</name>
    <description>
		Application permettant d'entrer des récoltes dans la base de données mycologique de l'Adonif.
	</description>
    <author email="" href="">
		Adonif
	</author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="android-targetSdkVersion" value="10" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashMaintainAspectRatio" value="false" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value="1" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="AutoHideSplashScreen" value="false" />
    <platform name="ios">
        <icon height="180" src="img/icons/ios/icon-60@3x.png" width="180" />
        <icon height="60" src="img/icons/ios/icon-60.png" width="60" />
        <icon height="120" src="img/icons/ios/icon-60@2x.png" width="120" />
        <icon height="76" src="img/icons/ios/icon-76.png" width="76" />
        <icon height="152" src="img/icons/ios/icon-76@2x.png" width="152" />
        <icon height="40" src="img/icons/ios/icon-40.png" width="40" />
        <icon height="80" src="img/icons/ios/icon-40@2x.png" width="80" />
        <icon height="57" src="img/icons/ios/icon.png" width="57" />
        <icon height="114" src="img/icons/ios/icon@2x.png" width="114" />
        <icon height="72" src="img/icons/ios/icon-72.png" width="72" />
        <icon height="144" src="img/icons/ios/icon-72@2x.png" width="144" />
        <icon height="29" src="img/icons/ios/icon-small.png" width="29" />
        <icon height="58" src="img/icons/ios/icon-small@2x.png" width="58" />
        <icon height="50" src="img/icons/ios/icon-50.png" width="50" />
        <icon height="100" src="img/icons/ios/icon-50@2x.png" width="100" />
    </platform>
    <platform name="ios">
        <splash height="480" src="img/screen/ios/Default~iphone.png" width="320" />
        <splash height="960" src="img/screen/ios/Default@2x~iphone.png" width="640" />
        <splash height="1024" src="img/screen/ios/Default-Portrait~ipad.png" width="768" />
        <splash height="2048" src="img/screen/ios/Default-Portrait@2x~ipad.png" width="1536" />
        <splash height="768" src="img/screen/ios/Default-Landscape~ipad.png" width="1024" />
        <splash height="1536" src="img/screen/ios/Default-Landscape@2x~ipad.png" width="2048" />
        <splash height="1136" src="img/screen/ios/Default-568h@2x~iphone.png" width="640" />
        <splash height="1334" src="img/screen/ios/Default-667h.png" width="750" />
        <splash height="2208" src="img/screen/ios/Default-736h.png" width="1242" />
        <splash height="1242" src="img/screen/ios/Default-Landscape-736h.png" width="2208" />
    </platform>
    <platform name="android">
        <icon density="ldpi" src="img/icons/android/icon_ldpi.png" />
        <icon density="mdpi" src="img/icons/android/icon_mdpi.png" />
        <icon density="hdpi" src="img/icons/android/icon_hdpi.png" />
        <icon density="xhdpi" src="img/icons/android/icon_xhdpi.png" />
    </platform>
    <platform name="android">
        <splash density="land-hdpi" src="img/screen/android/splash_land_hdpi.png" />
        <splash density="land-mdpi" src="img/screen/android/splash_land_mdpi.png" />
        <splash density="land-xhdpi" src="img/screen/android/splash_land_xhdpi.png" />
        <splash density="port-hdpi" src="img/screen/android/splash_port_hdpi.png" />
        <splash density="port-mdpi" src="img/screen/android/splash_port_mdpi.png" />
        <splash density="port-xhdpi" src="img/screen/android/splash_port_xhdpi.png" />
    </platform>
    <engine name="android" spec="~6.2.3" />
    <plugin name="cordova-plugin-geolocation" spec="~2.4.3" />
    <plugin name="cordova-plugin-toast" spec="~1.0.1" />
</widget>
