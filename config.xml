<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.app.adonif" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<name>Adonif</name>
	<description>
		Application permettant d'entrer des récoltes dans la base de données mycologique de l'Adonif.
	</description>
	<author email="" href="">
		Adonif
	</author>


	<content src="index.html" />
	<access origin="*" />

	<preference name="SplashScreen" value="screen" />
	<preference name="SplashScreenDelay" value="3000" />
	<preference name="SplashMaintainAspectRatio" value="false" />
	<preference name="FadeSplashScreen" value="true"/>
	<preference name="FadeSplashScreenDuration" value="1"/>
	<preference name="ShowSplashScreenSpinner" value="false"/>
	<preference name="AutoHideSplashScreen" value="false" />
<!--
	<icon src="img/icon.png"/>
	<splash src="img/splash.png"/>
-->
	<platform name="android">
		<icon src="img/icons/icon_mdpi.png" density="mdpi" />
		<icon src="img/icons/icon_hdpi.png" density="hdpi" />
		<icon src="img/icons/icon_xhdpi.png" density="xhdpi" />
	</platform>

	<platform name="android">
		<!-- you can use any density that exists in the Android project -->
		<splash src="img/screen/splash_land_hdpi.png" density="land-hdpi"/>
		<splash src="img/screen/splash_land_mdpi.png" density="land-mdpi"/>
		<splash src="img/screen/splash_land_xhdpi.png" density="land-xhdpi"/>

		<splash src="img/screen/splash_port_hdpi.png" density="port-hdpi"/>
		<splash src="img/screen/splash_port_mdpi.png" density="port-mdpi"/>
		<splash src="img/screen/splash_port_xhdpi.png" density="port-xhdpi"/>
	</platform>

</widget>
